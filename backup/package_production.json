{
  "name": "im-backend-production",
  "version": "1.0.0",
  "description": "现代化IM即时通讯系统 - 生产版本",
  "main": "app_production.js",
  "scripts": {
    "start": "node app_production.js",
    "dev": "nodemon app_production.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "docker:build": "docker build -t im-backend .",
    "docker:run": "docker run -p 3001:3001 im-backend"
  },
  "keywords": [
    "im",
    "chat",
    "messaging",
    "socket.io",
    "mongodb",
    "real-time"
  ],
  "author": "IM Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.2",
    "socket.io": "^4.8.1",
    "mongodb": "^6.20.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.2",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
